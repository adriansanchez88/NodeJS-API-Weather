{
  "openapi": "3.0.0",
  "info": {
    "title": "Weather API.",
    "description": "Get current weather for your city.",
    "version": "0.0.1",
    "contact": {
      "email": "adriansanchez88@gmail.com"
    }
  },
  
  "servers":[
    {
      "url":"http://localhost:3000/api/v1",
      "description": "Desarrollo"  
    },
    {
      "url":"https://weather-api-adrian.herokuapp.com/api/v1",
      "description": "Producción"  
    } 
  ],
  "tags": [    
    {
      "name": "Weather",
      "description": "Get current weather details."
    },
    {
      "name": "Cities",
      "description": "Get cities list."
    }
  ],
  "paths": {    
    "/weather/{city}/{id}": {
      "get": {
        "tags": [
          "Weather"
        ],
        "summary": "Call current weather data for the city name and id provided.",
        "description": "",
        "parameters":[ 
          {
            "name": "city",
            "in": "path",
            "description": "The name of the city to get current weather.",
            "required": true,
            "schema": {
              "type":"string"
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "The id of the city to get current weather.",
            "required": true,
            "schema": {
              "type":"string"
            }
          }             
        ],            
        "responses": {
          "200": {
            "description": "The current weather data in JSON format.",
            "content": {
              "application/json":{
                "schema":{
                  "$ref": "#/components/schemas/Success for Weather"
                }
              }
            }
          }
        }
      }
    },
    "/weather/": {
      "get": {
        "tags": [
          "Weather"
        ],
        "summary": "Call current weather data for the coordinates of one location.",
        "description": "",
        "parameters":[          
          {
            "name": "longitude",
            "in": "query",
            "description": "The longitude of the location to get current weather. Must use with `latitude`.",
            "required": true,
            "schema": {
              "type":"number"
            },
            "style":"form"
          },
          {
            "name": "latitude",
            "in": "query",
            "description": "The latitude of the location to get current weather. Must use with `longitude`.",
            "required": true,
            "schema": {
              "type":"number"
            },
            "style":"form"
          }            
        ],            
        "responses": {
          "200": {
            "description": "The current weather data in JSON format.",
            "content": {
              "application/json":{
                "schema":{
                  "$ref": "#/components/schemas/Success for Weather"
                }
              }
            }
          }
        }
      }
    },
    "/cities/{city}": {
      "get": {
        "tags": [
          "Cities"
        ],
        "summary": "Get a list of locations with the same name that the specified city name.",
        "description": "",
        "parameters":[          
          {
            "name": "city",
            "in": "path",
            "description": "The name of the city.",
            "required": true,
            "schema": {
              "type":"string"
            }
          }           
        ],            
        "responses": {
          "200": {
            "description": "The current weather data in JSON format.",
            "content": {
              "application/json":{
                "schema":{
                  "$ref": "#/components/schemas/Success for City"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Success for City": {        
        "type": "object",
        "properties": {
          "status":{
            "description": "The status of the response.",
            "type": "string",          
            "example": "OK"
          },
          "data":{
            "description": "The array data of cities.",
            "type":"array",
            "items":{
              "$ref": "#/components/schemas/City" 
            }
          }
        }
      },
      "Success for Weather": {        
        "type": "object",
        "properties": {
          "status":{
            "description": "The status of the response.",
            "type": "string",          
            "example": "OK"
          },
          "data":{            
            "$ref": "#/components/schemas/Weather"
          }
        }
      },
      "City": {        
        "type": "object",
        "properties": {
          "id":{
            "description": "The id of the city.",
            "type": "string",          
            "example": "place.11905458085992730"
          },
          "name":{
            "description": "The name of the city.",
            "type":"string",          
            "example":"Leganés, Madrid, España"
          },
          "longitude":{
            "description": "The longitude of the city.",
            "type":"number",          
            "example":"-3.7654"
          },
          "latitude":{
            "description": "The latitude of the city.",
            "type":"number",          
            "example":"40.32825"
          }
        }
      },
      "Weather": {        
        "type": "object",
        "properties": {
          "description":{
            "description": "The description of the weather.",
            "type": "string",          
            "example": "cielo claro"
          },
          "temperature":{
            "description": "The current temperature.",
            "type":"number",          
            "example":"18.53"
          },
          "temperatureMin":{
            "description": "The minimum temperature.",
            "type":"number",          
            "example":"17.22"
          },
          "temperatureMax":{
            "description": "The maximum temperatura.",
            "type":"number",          
            "example":"20"
          }
        }
      }      
    }
  }
}